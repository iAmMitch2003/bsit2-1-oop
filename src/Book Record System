
import java.util.ArrayList;

public class Book {
    // Instance variables
    private String title;
    private String author;
    private ArrayList<Integer> ratings;
    private static int totalBooks = 0;

    // Constructor
    public Book(String title, String author) {
        this.title = title;
        this.author = author;
        this.ratings = new ArrayList<>();
        totalBooks++;
    }

    // Method to add a single rating
    public void addRating(int rating) throws IllegalArgumentException {
        if (rating < 1 || rating > 5) {
            throw new IllegalArgumentException("Invalid rating: must be 1-5 stars");
        }
        ratings.add(rating);
    }

    // Method to calculate average rating
    public double getAverageRating() {
        if (ratings.isEmpty()) {
            return 0.0;
        }
        double sum = 0;
        for (int rating : ratings) {
            sum += rating;
        }
        return sum / ratings.size();
    }

    // Method to get popularity level based on average rating
    public String getPopularityLevel() {
        double avgRating = getAverageRating();
        if (avgRating == 0.0) {
            return "No ratings";
        } else if (avgRating >= 4.5) {
            return "Excellent";
        } else if (avgRating >= 3.5) {
            return "Good";
        } else if (avgRating >= 2.5) {
            return "Average";
        } else if (avgRating >= 1.5) {
            return "Poor";
        } else {
            return "Terrible";
        }
    }

    // Method to add multiple ratings using varargs
    public void addMultipleRatings(int... ratings) {
        for (int rating : ratings) {
            try {
                addRating(rating);
            } catch (IllegalArgumentException e) {
                System.out.println(e.getMessage());
            }
        }
    }

    // Static method to get total books created
    public static int getTotalBooks() {
        return totalBooks;
    }

    // Getter for title
    public String getTitle() {
        return title;
    }

    // Getter for author
    public String getAuthor() {
        return author;
    }

    // toString method to display book details
    @Override
    public String toString() {
        return "Book: " + title + " by " + author + ", Average Rating: " + getAverageRating() +
                ", Level: " + getPopularityLevel();
    }
}
